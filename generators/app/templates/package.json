{
  "name": "<%= name %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "license": "<%= license %>",
  "author": "<%= author %> <<%= email %>>",
  "scripts": {
    "build": "npm run link -s && npm test",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "link": "comp link",
    "precommit": "git stash save --keep-index -q \"precommit stash\" && npm run build -s && { git stash pop --index -q; } || { git stash pop --index -q; exit 1; }",
    "test": "nyc mocha",
    "update": "comp update -s && comp update -p",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@commitlint/cli": "^4.3.0",
    "@commitlint/config-angular": "^4.3.0",
    "chai": "^4.1.2",
    "comptroller": "^0.3.0",
    "conventional-changelog-cli": "^1.3.4",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "comptroller": {
    <% if (monorepo) { %>"packages": "packages",<% } %>
    "source": "src/**/*",
    "dev": "test/**/*",
    <% if (monorepo) { %>
    "inherits": [
      "version",
      "author",
      "repo",
      "bugs",
      "homepage",
      "browserify"
    ],
    <% } %>
    "pretty": 80,
    "detective": { "parse": { "plugins": [ "objectRestSpread" ] } }
  }
}
